# Environment variables for HabitLedger
# Copy this file to .env and fill in your actual values
# The .env file should not be committed to version control


# API Keys
# Required: Google API key for Gemini LLM-based behavior analysis
GOOGLE_API_KEY=your_api_key_here

# Optional Configuration

# Model Selection (default: gemini-1.5-flash)
# gemini-1.5-flash: Recommended for production - better quota limits, stable
# gemini-2.0-flash-exp: Experimental features but stricter quotas
# gemini-1.5-pro: Most capable, requires paid tier
GOOGLE_ADK_MODEL=gemini-1.5-flash

# Rate Limiting (default: 1.0 seconds)
# Minimum time between LLM API calls to prevent quota exhaustion
# Increase to 2.0-3.0 if hitting quota limits on free tier
# Decrease to 0.5 if using paid tier with higher quotas
LLM_MIN_CALL_INTERVAL=1.0

# Logging Configuration
LOG_LEVEL=INFO
STRUCTURED_LOGGING=false
CONSOLE_LOGGING=true

# Database Configuration
# DATABASE_PATH=data/user_data.db

# Deployment Configuration
GCP_PROJECT_ID=your_gcp_project_id
GCP_REGION=your_gcp_region
SERVICE_NAME=habitledger-agent
PORT=8080
